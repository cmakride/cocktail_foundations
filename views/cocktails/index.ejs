<%- include('../partials/html-head') %>
  <link id="favicon" rel="icon" href="images/Favicon_Martini_Glass.png" type="image/png" sizes="32x32">
  <link rel="stylesheet" href="/stylesheets/cards.css" />
  <script 
		src="https://kit.fontawesome.com/4da7a940f0.js"
		crossorigin="anonymous"
	></script>
  </head>

  <body>


    <nav>
      <ul class="nav__links">
        <li>
      <% if (user) { %>
        <a href="/auth/logout">
          <button type="submit">Logout</button>
        </a>
        <% } else { %>
          <a href="/auth/google" class="siwg-link">
            <button type="submit" class="siwg">
              <img id="siwg-image" alt="Sign in with Google" />
            </button>
          </a>
          <% } %>
        </li>

         <li><a href="/cocktails">All Cocktails</a></li>
         <li><a href="/cocktails/new">Add Cocktail</a></li>
         <li><a href="/flashcards">Flashcards</a></li>
          </ul>
    </nav>


    <section id="searchbar">
      <!-- !Search Bar -->
      <!-- class = "col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" -->
      <form action="/cocktails/search" method="GET" class="">
        <input id="search" class="form-control form-control-dark" type="search" name="name" placeholder="Search name..."
          value="<%=cocktails.name%>" autocomplete="off" />
      </form>
      <!-- !End Search Bar -->
    </section>

    <section>

      <% cocktails.forEach(cocktail=> { %>

        <div class="wrapper">
          <a style="text-decoration: none" href="/cocktails/<%=cocktail._id%>">
            <div class="card">
              <img src="<%=cocktail.image%>">
              <div class="info">
                <h1>
                  <%= cocktail.name %>
                </h1>
              </div>
            </div>
          </a>
        </div>

        <% }) %>


    </section>

    <%- include('../partials/footer') %>